<Window x:Class="SayoOSD.Views.OsdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sayo OSD" Height="180" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" Focusable="False"
        IsHitTestVisible="False" UseLayoutRounding="True"> 
    <!-- 기본값 False (클릭 통과), 이동 모드에서만 True로 변경 -->
    
    <Border CornerRadius="10" Background="#AA000000" Padding="10">
        <UniformGrid Rows="2" Columns="6" x:Name="GridKeys">
            <UniformGrid.Resources>
                <Style TargetType="Border">
                    <Setter Property="Margin" Value="3"/>
                    <Setter Property="CornerRadius" Value="5"/>
                    <Setter Property="Background" Value="#33FFFFFF"/>
                    <Setter Property="Padding" Value="5"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="TextWrapping" Value="Wrap"/>
                    <Setter Property="TextAlignment" Value="Center"/>
                </Style>
            </UniformGrid.Resources>
            
            <!-- 12개의 슬롯 (동적으로 텍스트 변경됨) -->
            <Border x:Name="Slot1"><TextBlock x:Name="Txt1" Text="Key 1"/></Border>
            <Border x:Name="Slot2"><TextBlock x:Name="Txt2" Text="Key 2"/></Border>
            <Border x:Name="Slot3"><TextBlock x:Name="Txt3" Text="Key 3"/></Border>
            <Border x:Name="Slot4"><TextBlock x:Name="Txt4" Text="Key 4"/></Border>
            <Border x:Name="Slot5"><TextBlock x:Name="Txt5" Text="Key 5"/></Border>
            <Border x:Name="Slot6"><TextBlock x:Name="Txt6" Text="Key 6"/></Border>
            
            <Border x:Name="Slot7"><TextBlock x:Name="Txt7" Text="Key 7"/></Border>
            <Border x:Name="Slot8"><TextBlock x:Name="Txt8" Text="Key 8"/></Border>
            <Border x:Name="Slot9"><TextBlock x:Name="Txt9" Text="Key 9"/></Border>
            <Border x:Name="Slot10"><TextBlock x:Name="Txt10" Text="Key 10"/></Border>
            <Border x:Name="Slot11"><TextBlock x:Name="Txt11" Text="Key 11"/></Border>
            <Border x:Name="Slot12"><TextBlock x:Name="Txt12" Text="Key 12"/></Border>
        </UniformGrid>
    </Border>
</Window>